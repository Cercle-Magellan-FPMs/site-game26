---
import { ViewTransitions } from "astro:transitions";
import { AstroFont } from "astro-font";
import Nav from "@components/Nav.astro";
import Footer from "@components/Footer.astro";
import "@styles/base.css";

interface Props {
  title: string;
}

const { title: page } = Astro.props;

const title = `${page === "Accueil" ? "" : `${page} | `}GAME 26`;

const canonicalURL = new URL(Astro.url.pathname, Astro.site)
  .toString()
  .replace(/\/$/, "");
---

<!doctype html>
<html lang="fr-BE" class="scroll-p-32 scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="title"
      content="GAME 26 - LAN Party organisée par le Cercle Magellan FPMs"
    />
    <meta
      name="description"
      content="Cette année encore, le Cercle Magellan remet le couvert et a le plaisir de vous annoncer la 26ème édition de sa LAN party, le GAME !"
    />
    <meta name="author" content="Cercle Magellan FPMs" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <!-- <style>
      @view-transition {
        navigation: auto; /* enabled! */
      }
    </style> -->
    <ViewTransitions />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <AstroFont
      config={[
        {
          src: [],
          name: "Poppins",
          // Google Fonts URL
          googleFontsURL:
            "https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&display=swap",
          preload: true,
          display: "swap",
          selector: "body",
          fallback: "sans-serif",
        },
      ]}
    />
  </head>

  <body class="antialiased" transition:animate="fade">
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
